<body class="d-flex flex-column vh-100" ; style="color:rgb(73, 75, 74); font-family: fangsong">




    <%- include('../partials/navbar')%>


        <div class="container">
            <%- include('../partials/flash')%>
        </div>

<div class="container d-flex justify-content-center align-items-center mt-5">
    <div class="row">
        <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
            <div class="card shadow">
                <img src="https://ichef.bbci.co.uk/news/976/cpsprodpb/10A6D/production/_115350286_gettyimages-1213895723.jpg"
                    alt="" class="card-img-top" crossorigin/>
                <div class="card-body">
                    <h5 class="card-title">Login</h5>
                    <form action="/login" method="POST" class="validated-form" novalidate>
                        <div class="mb-3">
                            <label class="form-label" for="username">Username</label>
                            <input class="form-control" type="text" id="username" name="username" autofocus required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label" for="password">Password</label>
                            <input class="form-control" type="password" id="password" name="password" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>
                        <div class="d-grid gap-2 col-6 mx-auto">
                        <button class="btn btn-success">Login</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

